<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ToolBar con título de la app -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:title="Mi Reproductor"
        android:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nombre de la canción -->
    <TextView
        android:id="@+id/tvSongTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre de la canción"
        android:textSize="18sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Barra de progreso -->
    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvSongTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Tiempo de reproducción -->
    <TextView
        android:id="@+id/tvCurrentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        app:layout_constraintTop_toBottomOf="@id/seekBar"
        app:layout_constraintStart_toStartOf="@id/seekBar"/>

    <!-- Tiempo total de la canción -->
    <TextView
        android:id="@+id/tvTotalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        app:layout_constraintTop_toBottomOf="@id/seekBar"
        app:layout_constraintEnd_toEndOf="@id/seekBar"/>

    <!-- Botón Play -->
    <Button
        android:id="@+id/btnPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        app:layout_constraintTop_toBottomOf="@id/tvCurrentTime"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="48dp"/>

    <!-- Botón Pause -->
    <Button
        android:id="@+id/btnPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pause"
        app:layout_constraintTop_toBottomOf="@id/tvTotalTime"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="48dp"/>

    <!-- Botones de sonidos cortos -->
    <Button
        android:id="@+id/btnSound1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sonido 1"
        app:layout_constraintTop_toBottomOf="@id/btnPlay"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"/>

    <Button
        android:id="@+id/btnSound2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sonido 2"
        app:layout_constraintTop_toBottomOf="@id/btnPlay"
        app:layout_constraintStart_toEndOf="@id/btnSound1"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"/>

    <Button
        android:id="@+id/btnSound3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sonido 3"
        app:layout_constraintTop_toBottomOf="@id/btnPlay"
        app:layout_constraintStart_toEndOf="@id/btnSound2"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"/>

    <Button
        android:id="@+id/btnSound4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sonido 4"
        app:layout_constraintTop_toBottomOf="@id/btnPlay"
        app:layout_constraintStart_toEndOf="@id/btnSound3"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
